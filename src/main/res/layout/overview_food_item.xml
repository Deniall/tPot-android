<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:gravity="center_vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp"
    android:elevation="0dp"
    android:layout_height="75dp">

    <TextView
        android:text="Chicken Korma"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overview_food_item_name"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="130dp"
        android:elevation="2dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title" />

    <ImageView
        android:layout_width="144dp"
        android:layout_height="116dp"
        app:srcCompat="@drawable/ic_local_dining_black_24dp"
        android:id="@+id/overview_food_item_image"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-20dp" />

    <TextView
        android:text="Avg. cooking time: 20mins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/overview_food_item_time"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="50dp"
        android:textSize="14sp" />

</FrameLayout>
