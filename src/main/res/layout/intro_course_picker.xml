<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdtp_calendar_selected_date_text"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/tpot_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-20dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Welcome to tPot!"
        android:textColor="@color/common_google_signin_btn_text_dark_focused"
        android:textSize="22sp" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Please enter your college:"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <EditText
        android:id="@+id/college_picker"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="DCU"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/common_google_signin_btn_text_light_default" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Please enter your course code:"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <EditText
        android:id="@+id/course_picker"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="CPSSD"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="@color/common_google_signin_btn_text_light_default" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Please enter your year:"
        android:textColor="@color/common_google_signin_btn_text_dark_focused" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/year_picker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        app:np_dividerColor="@color/common_google_signin_btn_text_dark_default"
        app:np_dividerDistance="40dp"
        app:np_dividerThickness="2dp"
        app:np_max="4"
        app:np_min="1"
        app:np_orientation="horizontal"
        app:np_textColor="@color/primary"
        app:np_textSize="20sp"
        app:np_value="2"
        app:np_wheelItemCount="4"
        app:np_wrapSelectorWheel="true" />


</LinearLayout>