<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mdtp_calendar_selected_date_text"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textView6"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Set your diet and intolerance preferances here, if you wish:" />

    <TextView
        android:id="@+id/diet_prefs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"
        android:text="Diet Preferences:"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <ListView
        android:id="@+id/diet_listview"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:layout_marginTop="5dp"></ListView>

    <TextView
        android:id="@+id/intolerances_prefs_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Intolerances:"
        android:textColor="@color/common_google_signin_btn_text_light_pressed" />

    <ListView
        android:id="@+id/intolerances_listview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="5dp"></ListView>


</LinearLayout>