<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginLeft="2dp"
    android:layout_marginRight="2dp"
    android:gravity="center_vertical"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="3dp"
    android:elevation="0dp"
    android:layout_height="75dp">

    <TextView
        android:id="@+id/offers_item_title"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="5dp"
        android:elevation="2dp"
        android:text="Counter Tesco Finest Irish Angus Strip Loin Steak"
        android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/offers_item_image"
        android:layout_width="144dp"
        android:layout_height="116dp"
        android:layout_marginLeft="-20dp"
        android:layout_marginTop="-20dp"
        app:srcCompat="@drawable/ic_local_dining_black_24dp" />

    <TextView
        android:id="@+id/offers_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginTop="45dp"
        android:text="â‚¬3.00"
        android:textSize="22sp" />

</FrameLayout>
