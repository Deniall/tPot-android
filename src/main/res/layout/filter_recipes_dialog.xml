<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="-10dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Diet:"
        android:textColor="#80000000"
        android:textSize="12sp" />

    <CheckBox
        android:id="@+id/checkBox4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegetarian" />

    <CheckBox
        android:id="@+id/checkBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vegan" />

    <CheckBox
        android:id="@+id/checkBox2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Gluten-Free" />

    <CheckBox
        android:id="@+id/checkBox3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dairy-Free" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Results to return:"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <com.shawnlin.numberpicker.NumberPicker
        android:id="@+id/number_picker"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal"
        app:np_dividerColor="@color/primary"
        app:np_dividerDistance="40dp"
        app:np_dividerThickness="2dp"
        app:np_height="60dp"
        app:np_max="50"
        app:np_min="1"
        app:np_orientation="horizontal"
        app:np_textColor="@color/primary"
        app:np_textSize="20sp"
        app:np_value="25"
        app:np_wheelItemCount="7"
        app:np_width="200dp"
        app:np_wrapSelectorWheel="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Exclude Ingredients:"
        android:textColor="#80000000"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/password"
        style="@android:style/Widget.DeviceDefault.Light.EditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:hint="Comma-seperated values, eg. eggs, milk"
        android:inputType="text"
        android:textColor="#000000"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/showPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:text="Save these preferences?"
        android:textColor="#000000" />

</LinearLayout>